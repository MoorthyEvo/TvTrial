                android:layout_weight="1"

                android:text="u" />

            <Button
                android:id="@+id/button_i"
                style="@style/keyboard_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="i" />

            <Button
                android:id="@+id/button_o"
                style="@style/keyboard_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="o" />

            <Button
                android:id="@+id/button_p"
                style="@style/keyboard_button"
                android:layout_width="0dp"
