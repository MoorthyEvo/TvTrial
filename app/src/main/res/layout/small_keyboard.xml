                android:layout_weight="1"

                android:text="b" />

            <Button
                android:id="@+id/button_n"
                style="@style/keyboard_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="n" />

            <Button
                android:id="@+id/button_m"
                style="@style/keyboard_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="m" />




            <Button
                android:id="@+id/button_comma_open_small"
                style="@style/keyboard_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
